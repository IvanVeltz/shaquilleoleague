<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>

<body class="min-h-screen flex flex-col z-0">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[#0C101B] backdrop-blur-md border-b border-gray-700">
        <div class="flex justify-between items-center px-4 sm:px-6 md:px-8 py-4">
            <!-- Logo -->
            <a href="#" class="flex items-center gap-2">
                <img src="{{ asset('images/logos/ShaquilleOLeague.png') }}" alt="Logo"
                    class="w-10 h-10 sm:w-12 sm:h-12">
                <span class="text-xl sm:text-2xl md:text-3xl font-bold text-white">Shaquille O'League</span>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-6">
                <a href="#"
                    class="text-gray-200 mx-2 hover:scale-105 hover:text-yellow-400 nav-underline transition-all text-base lg:text-2xl">
                    <i class="fa-solid fa-house mr-1"></i>
                    Accueil</a>
                <a href="#"
                    class="text-gray-200 mx-2 hover:scale-105 hover:text-yellow-400 nav-underline transition-all text-base lg:text-2xl">
                    <i class="fa-solid fa-ranking-star mr-2"></i>O'League</a>
                <a href="#"
                    class="text-gray-200 mx-2 hover:scale-105 hover:text-yellow-400 nav-underline transition-all text-base lg:text-2xl">
                    <i class="fa-solid fa-trophy mr-2"></i>O'Cup</a>
                <a href="#"
                    class="text-gray-200 mx-2 hover:scale-105 hover:text-yellow-400 nav-underline transition-all duration-300 text-base lg:text-2xl">
                    <i class="fa-solid fa-user mr-2"></i>O'Solo</a>
            </div>

            <!-- Mobile Burger -->
            <button id="mobile-menu-btn" class="md:hidden p-2 text-white rounded z-50 focus:outline-none">
                <span class="text-lg">MENU</span><i class="fas fa-bars text-lg ml-2"></i>
            </button>

        </div>
    </nav>

    <!-- Overlay -->
    <div id="mobile-menu-overlay"
        class="fixed top-0 left-0 w-full h-full bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden z-40">
    </div>

    <!-- Mobile Drawer -->
    <div id="mobile-menu"
        class="fixed top-0 right-[-100vw] h-full w-[50vw] max-w-sm sm:max-w-md bg-gray-900 shadow-lg transition-all duration-300 md:hidden z-50 overflow-y-auto">
        <div class="flex flex-col mt-16 px-4 items-center">
            <!-- Close button -->
            <button id="mobile-menu-close" class="self-end text-white hover:text-yellow-500 p-2 focus:outline-none">
                <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <!-- Links -->
            <div class="flex flex-col gap-4 mt-8 ">
                <a href="#" class="text-white transition-colors duration-200 p-3 rounded-lg text-base sm:text-lg">
                    <i class="fa-solid fa-house mr-1"></i>Accueil</a>
                <a href="#" class="text-white transition-colors duration-200 p-3 rounded-lg text-base sm:text-lg">
                    <i class="fa-solid fa-ranking-star mr-1"></i>O'League</a>
                <a href="#" class="text-white transition-colors duration-200 p-3 rounded-lg text-base sm:text-lg">
                    <i class="fa-solid fa-trophy mr-1"></i>O'Cup</a>
                <a href="#" class="text-white transition-colors duration-200 p-3 rounded-lg text-base sm:text-lg">
                    <i class="fa-solid fa-user mr-1"></i>O'Solo</a>
            </div>
        </div>
    </div>







    <main class="pt-24 grow">
        {% block body %}{% endblock %}
    </main>

    <footer class="bg-[#0C101B] text-gray-300 py-12 border-t border-gray-700">
        <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">

            <!-- Logo & Copyright -->
            <div class="text-center md:text-left">
                <p class="font-semibold text-white text-lg">Shaquille O'League</p>
                <p class="text-gray-400 text-sm mt-2">© {{ "now"|date("Y") }} Tous droits réservés</p>
            </div>

            <!-- Liens rapides -->
            <div class="text-center">
                <h3 class="font-semibold text-yellow-500 mb-3">Liens rapides</h3>
                <ul class="space-y-2">
                    <li><a href="#" class="hover:text-yellow-500 transition">Accueil</a></li>
                    <li><a href="#" class="hover:text-yellow-500 transition">O'League</a></li>
                    <li><a href="#" class="hover:text-yellow-500 transition">O'Cup</a></li>
                    <li><a href="#" class="hover:text-yellow-500 transition">O'Solo</a></li>
                </ul>
            </div>

            <!-- Légal & Réseaux sociaux -->
            <div class="text-center md:text-right">
                <h3 class="font-semibold text-yellow-500 mb-3">Informations</h3>
                <ul class="space-y-2 mb-4">
                    <li><a href="#" class="hover:text-yellow-500 transition">Mentions légales</a></li>
                    <li><a href="#" class="hover:text-yellow-500 transition">CGU</a></li>
                    <li><a href="#" class="hover:text-yellow-500 transition">Politique de confidentialité</a></li>
                </ul>
                <div class="flex justify-center md:justify-end gap-4">
                    <a href="#" class="hover:text-yellow-500 transition"><i class="fab fa-x fa-xl"></i></a>
                </div>
            </div>

        </div>
    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    <script>
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        const closeBtn = document.getElementById('mobile-menu-close');
        const overlay = document.getElementById('mobile-menu-overlay');

        function openMenu() {
            menu.style.right = '0';
            overlay.classList.remove('opacity-0', 'pointer-events-none');
            overlay.classList.add('opacity-100', 'pointer-events-auto');
            document.body.style.overflow = 'hidden'; // bloque le scroll du body
        }

        function closeMenu() {
            menu.style.right = '-100vw';
            overlay.classList.remove('opacity-100', 'pointer-events-auto');
            overlay.classList.add('opacity-0', 'pointer-events-none');
            document.body.style.overflow = ''; // réactive le scroll du body
        }

        btn.addEventListener('click', openMenu);
        closeBtn.addEventListener('click', closeMenu);
        overlay.addEventListener('click', closeMenu);
    </script>

</body>

</html>